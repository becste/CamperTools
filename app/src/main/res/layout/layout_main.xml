<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal|center_vertical">

    <!-- Elevation section -->
    <TextView
        android:id="@+id/textElevation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/elevation_label"
        android:textSize="20sp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_label"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/buttonRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refresh_button" />
    
    <!-- Units toggle -->
    <Switch
        android:id="@+id/switchUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/units_toggle" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Weather section -->
    <TextView
        android:id="@+id/textWeatherNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_now_label"
        android:textSize="18sp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/textWeatherRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_range_label"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/textPrecip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/precip_label"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/buttonWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_button" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Bubble level title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_label"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <!-- Bubble + bar levels -->
    <com.campertools.app.LevelView
        android:id="@+id/levelView"
        android:layout_width="260dp"
        android:layout_height="260dp" />

    <!-- Text readout for tilt -->
    <TextView
        android:id="@+id/textTilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tilt_label"
        android:paddingTop="12dp" />
    
    <!-- Donate button -->
    <Button
        android:id="@+id/buttonDonate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/donate_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <!-- Weather Credit -->
    <TextView
        android:id="@+id/weatherCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_credit"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColorLink="@color/teal_200"
        android:textSize="12sp" />

</LinearLayout>