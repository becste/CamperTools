<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal|center_vertical">

    <!-- Elevation section -->
    <TextView
        android:id="@+id/textElevation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/elevation_label"
        android:textSize="20sp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_label"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/buttonRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refresh_button"
        android:textColor="@color/teal_200"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp" />
    
    <!-- Units toggle -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/units_toggle" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Weather section -->
    <TextView
        android:id="@+id/textWeatherNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_now_label"
        android:textSize="18sp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/textWeatherRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_range_label"
        android:paddingBottom="4dp" />
        
    <TextView
        android:id="@+id/textWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_label"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/textPrecip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/precip_label"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/buttonWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_button"
        android:textColor="@color/teal_200"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp" />

    <!-- Compass/Level Toggle -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchCompass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compass_toggle" />

    <!-- Bubble + bar levels -->
    <com.campertools.app.LevelView
        android:id="@+id/levelView"
        android:layout_width="260dp"
        android:layout_height="260dp" />
        
    <!-- Compass View -->
    <com.campertools.app.CompassView
        android:id="@+id/compassView"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:visibility="gone" />

    <!-- Text readout for tilt -->
    <TextView
        android:id="@+id/textTilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tilt_label"
        android:paddingTop="12dp" />
        
    <TextView
        android:id="@+id/textSettingsLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/open_settings"
        android:textColor="@color/teal_200"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp" />
    
    <!-- Donate button -->
    <TextView
        android:id="@+id/buttonDonate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/donate_button"
        android:textColor="@color/teal_200"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp" />

    <!-- Weather Credit -->
    <TextView
        android:id="@+id/weatherCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_credit"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColorLink="@color/teal_200"
        android:textSize="12sp" />

</LinearLayout>
