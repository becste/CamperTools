<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal|center_vertical">

    <!-- Level Calibration Section -->
    <TextView
        android:id="@+id/textLevelHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_bump_label"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/inputCameraBump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/camera_bump_hint"
        android:inputType="numberSigned|numberDecimal"
        android:maxLines="1"
        android:padding="6dp" />

    <RadioGroup
        android:id="@+id/radioBumpAxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <RadioButton
            android:id="@+id/radioBumpAxisPitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/camera_bump_axis_pitch" />

        <RadioButton
            android:id="@+id/radioBumpAxisRoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/camera_bump_axis_roll" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonAutoCalibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/auto_calibrate_button" />

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Units & Appearance Section -->
    <TextView
        android:id="@+id/textUnitsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/units_appearance_label"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="4dp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchNightMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/night_mode_toggle" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/units_toggle" />

    <!-- Back Button -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/back" />
</LinearLayout>